#include <iostream>
#include <locale>
using namespace std;
string poup;
int m,meses;
double juros,capital,taxa,montante;
int main()
{
    setlocale(LC_ALL, "Portuguese");

    cout <<"Aplicações financeiras da empresa Mequetrefe e seus Associados"<<endl;
    cout <<endl;
    cout <<"01 - Poupança Simples."<<endl;
    cout <<"02 - Poupança Plus."<<endl;
    cout <<"03 - Poupança Mega."<<endl;
    cout<<endl;


    do
    {
        cout <<"Digite a opção desejada para saber mais detalhes(Favor digitar apenas números Inteiros):  ";
        cin >> m;

    //Se os dados fornecidos pelo usuário não atenderem a condição abaixo, o código irá exibir a mensagem abaixo e irá pedir um novo valor até que a condição seja atendida.
        if (m >=4 || m <=0)
        {

            cout <<"Opção inválida, favor digitar (1,2 ou 3)"<<endl;
        }

    }

    //O código só irá seguir com sua execução se as condições abaixo forem atendidas.
    while (m >=4 || m <=0 );

    //Assim que o usuário escolher uma opção, o código irá fazer os cálculos estabelecidos na opção com os valores que o usuário fornecer.
    switch (m)
    {
    case 1:
        poup = "Poupança Simples";
        cout <<endl;
        cout << "Bem-Vindo(a) a poupança Simples"<<endl;
        cout <<"Capital mínimo: 1000." <<endl;
        cout <<"Juros: 0,75% ao mês." <<endl;
        cout <<"Tempo mínimo de aplicação: 3 meses."<<endl;
        cout <<endl;

        do
        {
            cout <<"Digite o capital inicial da aplicação(Favor digitar apenas números Inteiros): ";
            cin >> capital;

    //Previne o código de receber uma opção inválida, fazendo assim o usuário digitar um novo valor até que o mesmo seja válido.
            if (capital <1000)
            {
                cout <<"Opção inválida, favor seguir as orientações iniciais."<<endl;

            }

        }

    //O código só irá seguir com sua execução se as condições abaixo forem atendidas.
        while (capital <1000);

        do
        {
            cout <<"Quantos meses de aplicação deseja?(Favor digitar apenas números Inteiros): ";
            cin >> meses;

    //Previne o código de receber uma opção inválida, fazendo assim o usuário digitar um novo valor até que o mesmo seja válido.
            if (meses <=2)
            {
                cout <<"Opção inválida, favor seguir as orientações iniciais."<<endl;

            }


        }
    //O código só irá seguir com sua execução se as condições abaixo forem atendidas.
        while (meses <=2);

    //Juros já predefinido para o cálculo da opção escolhida pelo usuário.
        taxa = 0.75/100;
        montante = capital;

    //Irá fazer o cálculo de juros e irá parar assim que o número de meses fornecido pelo usuário for atendido.
        for (int i = 0; i < meses; i++)
        {
            montante = montante * (1 + taxa);
        }
        juros = montante - capital;


        break;


    case 2:
        poup = "Poupança Plus";
        cout <<endl;
        cout << "Bem-Vindo(a) a poupança Plus."<<endl;
        cout <<"Capital mínimo: 5000." <<endl;
        cout <<"Juros: 1,00% ao mês." <<endl;
        cout <<"Tempo mínimo de aplicação: 6 meses."<<endl;
        cout <<endl;

        do
        {
            cout <<"Digite o capital inicial da aplicação(Favor digitar apenas números Inteiros): ";
            cin >> capital;

            if (capital <5000)
            {
                cout <<"Opção inválida, favor seguir as orientações iniciais."<<endl;

            }

        }
        while (capital <5000);

        do
        {
            cout <<"Quantos meses de aplicação deseja?(Favor digitar apenas números Inteiros): ";
            cin >> meses;

            if (meses <=5)
            {
                cout <<"Opção inválida, favor seguir as orientações iniciais."<<endl;

            }


        }
        while (meses <=5);


        taxa = 1.00/100;
        montante = capital;
        for (int i = 0; i < meses; i++)
        {
            montante = montante * (1 + taxa);
        }
        juros = montante - capital;



        break;

    case 3:
        poup = "Poupança Mega";
        cout << "Bem-Vindo(a) a poupança Mega"<<endl;
        cout <<endl;
        cout <<"Capital mínimo: 10000." <<endl;
        cout <<"Juros: 1,25% ao mês." <<endl;
        cout <<"Tempo mínimo de aplicação: 12 meses."<<endl;
        cout <<endl;

        do
        {
            cout <<"Digite o capital inicial da aplicação(Favor digitar apenas números Inteiros): ";
            cin >> capital;

            if (capital <10000)
            {
                cout <<"Opção inválida, favor seguir as orientações iniciais."<<endl;

            }

        }
        while (capital <10000);

        do
        {
            cout <<"Quantos meses de aplicação deseja?(Favor digitar apenas números Inteiros): ";
            cin >> meses;

            if (meses <=11)
            {
                cout <<"Opção inválida, favor seguir as orientações iniciais."<<endl;

            }


        }
        while (meses <=11);
        taxa = 1.25/100;
        montante = capital;
        for (int i = 0; i < meses; i++)
        {
            montante = montante * (1 + taxa);
        }
        juros = montante - capital;

        break;


    }

    //Exibe a saída das opções escolhidas e dos valores já somados e finalizados.
    cout << poup << " e seus rendimentos gerados: " <<endl;
    cout <<endl;
    cout << "Valor dos juros: R$ " << juros << endl;
    cout << "Periodo: " << meses << " meses" <<endl;
    cout << "Montante final: R$ " << montante << endl;




}
